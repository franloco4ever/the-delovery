import SliderMedium from "../components/SliderMedium.astro";
import SliderSmall from "../components/SliderSmall.astro";
import "../styles/global.css";
import "swiper/css";
---

<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Desayunos y regalos sorpresa en Guadalajara y Zapopan | The Delovery
    </title>
    <meta
      name="description"
      content="Sorprende a tus personas favoritas con desayunos personalizados y regalos únicos. Armas tu pedido en línea, nos contactas por WhatsApp y nosotros entregamos la magia. ¡Perfecto para cumpleaños, aniversarios o porque sí! Envío a domicilio confiable."
    />
